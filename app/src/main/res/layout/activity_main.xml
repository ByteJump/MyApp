<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhj.myapp.MainActivity">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"></FrameLayout>

    <View
        android:id="@+id/view"
        android:layout_above="@+id/bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a9a9a9"></View>
    <RadioGroup
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_itme1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/bottom_select"
            android:textSize="0dp"
            android:checked="true"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_itme2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/bottom_select"
            android:textSize="0dp"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_itme3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/bottom_select"
            android:textSize="0dp"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_itme4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/bottom_select"
            android:textSize="0dp"
            android:gravity="center"/>
    </RadioGroup>
</RelativeLayout>
